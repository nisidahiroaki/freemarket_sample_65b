.devise-main
  .devise-header1
    = link_to root_path, class: 'devise-header1__registrations' do
      = image_tag 'fmarket_logo_red.svg', alt: 'logo', class: 'devise-header__registration__logo', height: '60', width: '185'    
    .devise-header1__signup-bar
      %ol.devise-header1__signup-bar__ol
        %li.devise-header1__signup-bar__nav 
          .devise-header1__signup-bar__nav__name-red 会員情報
          .devise-header1__signup-bar__nav__mark-red 
        %li.devise-header1__signup-bar__nav 
          .devise-header1__signup-bar__nav__name-red 電話番号
          .devise-header1__signup-bar__nav__mark-red 
        %li.devise-header1__signup-bar__nav 
          .devise-header1__signup-bar__nav__name-red お届け先住所入力
          .devise-header1__signup-bar__nav__mark-red
        %li.devise-header1__signup-bar__nav 
          .devise-header1__signup-bar__nav__name-gray 支払い方法
          .devise-header1__signup-bar__nav__mark-gray
        %li.devise-header1__signup-bar__nav 
          .devise-header1__signup-bar__nav__name-gray 完了
          .devise-header1__signup-bar__nav__mark-gray
        .devise-header1__signup-bar__line-gray
        .devise-header1__signup-bar__line-red__address_new
  .address-main
    %h1.address-main__header 住所入力
    = form_with id:@address, model:@user, url: "/signup", method: :post, local: true,class: 'devise-main__registration__form' do |f|
      = f.fields_for :user_addresses do |i|
        .address-main__fields__field
          %span.label お名前
          %span.necessary 必須
          = i.text_field :family_name_kanji, placeholder: "例）山田", class: 'address-main__form'
          = i.text_field :first_name_kanji, placeholder: "例）彩", class: 'address-main__form'
        .address-main__fields__field
          %span.label お名前カナ
          %span.necessary 必須
          = i.text_field :family_name_kana, placeholder: "例）ヤマダ", class: 'address-main__form'
          = i.text_field :first_name_kana, placeholder: "例）アヤ", class: 'address-main__form'
        .address-main__fields__field
          %span.label 郵便番号
          %span.necessary 必須
          = i.text_field :postal_code, placeholder: "例）123-4567", class: 'address-main__form'
        .address-main__fields__field
          %span.label 都道府県
          %span.necessary 必須
          = f.collection_select :prefecture, Prefecture.all, :id, :name,{},{class:'address-main__select'}
        .address-main__fields__field
          %span.label 市町村
          %span.necessary 必須
          = i.text_field :city, placeholder: "例）横浜市緑区", class: 'address-main__form'
        .address-main__fields__field
          %span.label 番地
          %span.necessary 必須
          = i.text_field :address_number, placeholder: "例）青山1-1-1", class: 'address-main__form'
        .address-main__fields__field
          %span.label 建物名
          %span.necessary-gray 任意
          = i.text_field :building_name, placeholder: "例) 柳ビル103", class: 'address-main__form'
        .address-main__fields__field
          %span.label 電話番号
          %span.necessary-gray 任意
          = i.text_field :phone_number, placeholder: "例） 09012345678", class: 'address-main__form'
      .address-main__fields__field
        .field__actions
          = f.submit "次へ進む", class: 'field__actions__btn' 
